@model BlogProject.ViewModel.System.Users.ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPass";
    Layout = null;
}

<h1>ResetPass</h1>

<h4>ResetPasswordViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Token" type="hidden" value="@Model.Token" />
            <input asp-for="Email" type="hidden" value="@Model.Email" />
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComfirmPass" class="control-label"></label>
                <input asp-for="ComfirmPass" class="form-control" />
                <span asp-validation-for="ComfirmPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

