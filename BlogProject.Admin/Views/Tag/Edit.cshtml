@model BlogProject.ViewModel.Catalog.Tags.TagVm

@{
    ViewData["Title"] = "Chỉnh sửa Tag bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TagVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagId" class="control-label"></label>
                <input asp-for="TagId" class="form-control" />
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostID" class="control-label"></label>
                <select asp-for="PostID" asp-items="@ViewBag.PostList" class="form-control"></select>
                <span asp-validation-for="PostID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagName" class="control-label"></label>
                <input asp-for="TagName" class="form-control" />
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="View" class="control-label"></label>
                <input asp-for="View" class="form-control" />
                <span asp-validation-for="View" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="form-group" style="text-align: end">
    <input type="submit" value="Lưu" class="btn btn-primary" />
    <a class="btn btn-success" asp-action="Index" asp-controller="Categories">Về danh sách</a>
</div>

