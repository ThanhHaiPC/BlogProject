@model BlogProject.ViewModel.System.Users.UserVm

@{
    ViewData["Title"] = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>


<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 col-xl-7">
                <div class="card">
                    <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            <!-- Image -->
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image"
                                     alt="Avatar" class="img-fluid img-thumbnail mt-4 mb-2"
                                     style="width: 150px; height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="~/images/AVATAR.png"
                                     alt="Default Avatar" class="img-fluid img-thumbnail mt-4 mb-2"
                                     style="width: 150px;">
                            }
                            <!-- Edit button -->
                            <a href="@Url.Action("Edit", new { id = Model.Id })" type="button" class="btn btn-danger" data-mdb-ripple-color="dark"
                               style="z-index: 1;">
                                Chỉnh sửa
                            </a>
                        </div>
                        <div class="ms-3" style="margin-top: 130px;">
                            <!-- Username and Name -->
                            <h5>
                                @(Model.FirstName ?? "Đang cập nhập")
                                @(Model.LastName ?? "")
                            </h5>
                            <p style="padding-bottom: 8px;" title="Tên tài khoản">@Model.UserName</p>
                        </div>
                    </div>
                    <!-- Additional content -->
                    <div class="p-3 text-black" style="background-color: #f8f9fa;">
                        <!-- User information -->
                        <div class="card-body p-4 text-black">
                            <h5>Thông tin người dùng</h5>
                            <p><strong>Tên:</strong> @(Model.FirstName ?? "Đang cập nhập") @(Model.LastName ?? "")</p>
                            <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Ngày sinh:</strong> @(Model.DateOfBir.HasValue ? Model.DateOfBir.Value.ToString("dd-MM-yyyy") : "Chưa cập nhật")</p>
                            <p><strong>Địa chỉ:</strong> @Model.Address</p>
                            <p><strong>Giới tính:</strong> @(Model.Gender == null ? "Chưa cập nhật" : Model.Gender.ToString())</p>
                        </div>
                    </div>
                    <!-- Success message -->
                    <div class="row" style="margin: 0 20px;">
                        @if (ViewBag.SuccessMsg != null)
                        {
                            <div id="msgAlert" class="alert alert-success" role="alert">
                                @ViewBag.SuccessMsg
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
