@model BlogProject.ViewModel.System.Users.UserVm;
@{
    ViewData["Title"] = "Thông Tin Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Style cho card chứa thông tin tài khoản */
    .user-card {
        background-color: #19232d;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 50px;
    }

    /* Style cho ảnh avatar */
    .user-avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #fff;
    }

    /* Style cho nút chỉnh sửa */
    .edit-button {
        display: inline-block;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        margin: 5px;
        border-radius: 4px;
        transition: background-color 0.3s;
        color: white;
    }

        .edit-button:hover {
            background-color: #FF5733;
        }
</style>

<section class="h-100 gradient-custom-2">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="user-card text-center ">
                    <div class="mb-4">
                        <!-- Ảnh avatar -->
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" alt="Avatar" class="user-avatar">
                        }
                        else
                        {
                            <img src="~/images/AVATAR.png" alt="Default Avatar" class="user-avatar">
                        }
                    </div>
                    <!-- Tên người dùng -->
                    <h4>@(Model.FirstName ?? "Tên") @(Model.LastName ?? "Người dùng")</h4>
                    <!-- Tên tài khoản -->
                    <p>@Model.UserName</p>
                    <!-- Nút chỉnh sửa thông tin và mật khẩu -->
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="edit-button btn-danger" data-mdb-ripple-color="dark">
                        Chỉnh sửa thông tin
                    </a>
                    <a href="@Url.Action("ChangePass", new { id = Model.Id })" class="edit-button btn-danger" data-mdb-ripple-color="dark">
                        Chỉnh sửa mật khẩu
                    </a>
                    <!-- Thông tin người dùng -->
                    <div class="mt-4">
                        <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Ngày sinh:</strong> @(Model.DateOfBir?.ToString("dd-MM-yyyy") ?? "Chưa cập nhật")</p>
                        <p><strong>Địa chỉ:</strong> @Model.Address</p>
                        <p><strong>Giới tính:</strong> @(Model.Gender?.ToString() ?? "Chưa cập nhật")</p>
                    </div>
                </div>
                <!-- Thông báo thành công -->
                <div class="row mt-3">
                    <div class="col">
                        @if (ViewBag.SuccessMsg != null)
                        {
                            <div id="msgAlert" class="alert alert-success" role="alert">
                                @ViewBag.SuccessMsg
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>