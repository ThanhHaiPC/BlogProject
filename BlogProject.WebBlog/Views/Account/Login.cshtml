@model BlogProject.ViewModel.System.Users.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link rel="apple-touch-icon" href="icon.png">

<meta name="theme-color" content="#030303">
<!-- google fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,500;0,700;1,300;1,500&family=Poppins:ital,wght@0,300;0,500;0,700;1,300;1,400&display=swap"
      rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<section class="wrap__section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Form Login -->
                <div class="card mx-auto" style="max-width: 380px;">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Đăng nhập tài khoản của bạn</h4>
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <div class="form-group" style="max-width:300px">
                                <input class="form-control" asp-for="UserName" type="text" placeholder="Nhập tên tài khoản" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div> <!-- form-group// -->
                            <div class="form-group" style="max-width:300px">
                                <input class="form-control" asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <a href="#" class="float-right">Quên mật khẩu?</a>
                                <label class="float-left custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" checked="">
                                    <span class="custom-control-label"> Nhớ </span>
                                </label>
                            </div> <!-- form-group form-check .// -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login </button>
                            </div> <!-- form-group// -->
                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                Bạn chưa có tài khoản? <a asp-controller="Account" asp-action="Register"
                                                          style="color: #393f81;">Đăng ký ở đây</a>
                            </p>
                        </form>
                    </div> <!-- card-body.// -->
                </div> <!-- card .// -->


            </div>
        </div>
    </div>
</section>



