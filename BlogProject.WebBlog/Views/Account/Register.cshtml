@model BlogProject.ViewModel.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link rel="apple-touch-icon" href="icon.png">

<meta name="theme-color" content="#030303">
<!-- google fonts -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,500;0,700;1,300;1,500&family=Poppins:ital,wght@0,300;0,500;0,700;1,300;1,400&display=swap"
      rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<section class="wrap__section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- register -->
                <!-- Form Register -->

                <div class="card mx-auto" style="max-width:520px;">
                    <article class="card-body">
                        <header class="mb-4">
                            <h4 class="card-title">Sign up</h4>
                        </header>
                        <form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label" for="inputFname1">First name <sup>*</sup></label>
                                <div class="controls">
                                    <input type="text" asp-for="FirstName" placeholder="First Name">
                                    <span asp-validation-for="FirstName" class="text-error"></span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="inputLnam">Last name <sup>*</sup></label>
                                <div class="controls">
                                    <input type="text" asp-for="LastName" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="input_email">Email <sup>*</sup></label>
                                <div class="controls">
                                    <input type="email" asp-for="Email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-error"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <h6 style="padding-top: 12px;">Giới tính</h6>
                                @Html.DropDownListFor(model => model.Gender, new SelectList(new[]
                                {
                                new SelectListItem { Value = "2", Text = "Không" },
                                new SelectListItem { Value = "0", Text = "Nam" },
                                new SelectListItem { Value = "1", Text = "Nữ" }
                                }, "Value", "Text"), "Chọn Danh mục", new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <h6 style="padding-top: 12px;">Ngày sinh</h6>
                                <input asp-for="DateOfBir" class="form-control" />
                                <span asp-validation-for="DateOfBir" class="text-danger"></span>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="inputPassword1">User Name <sup>*</sup></label>
                                <div class="controls">
                                    <input type="text" asp-for="UserName" placeholder="User Name">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="inputPassword1">Password <sup>*</sup></label>
                                <div class="controls">
                                    <input type="password" asp-for="Password" placeholder="Password">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="inputPassword1">Confirm Password <sup>*</sup></label>
                                <div class="controls">
                                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="mobile">Mobile Phone </label>
                                <div class="controls">
                                    <input type="text" asp-for="PhoneNumber" placeholder="Mobile Phone" />
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Register </button>
                            </div> <!-- form-group// -->
                            <div class="form-group">
                                <label class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" checked="">
                                    <span class="custom-control-label"> I am agree with <a href="#">terms and contitions</a> </span>
                                </label>
                            </div> <!-- form-group end.// -->
                        </form>
                    </article><!-- card-body.// -->
                </div>
                <!-- end register -->
            </div>
        </div>
    </div>
</section>