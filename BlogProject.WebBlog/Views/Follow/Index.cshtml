﻿@using BlogProject.ViewModel.Common;
@model PagedResult<BlogProject.ViewModel.System.Users.FollowVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách theo dõi</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                   @*  <th scope="col">ID</th> *@
                    <th scope="col">Tác giả</th>
                    <th scope="col">Ảnh đại diện</th>
                    <th scope="col">Ngày theo dõi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                       @*  <td>@item.UserId</td> *@
                        <td>@item.UserName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="@item.Image" alt="Avatar" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>