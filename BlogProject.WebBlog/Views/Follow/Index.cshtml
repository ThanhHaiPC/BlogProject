﻿@using BlogProject.ViewModel.Common;
@model PagedResult<BlogProject.ViewModel.System.Users.FollowVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Danh sách Theo Dõi</h1>
<style>
	.avatar-image {
		width: 90px;
		height: 90px;
		border-radius: 50%;
		object-fit: cover;
	}
	.user-name{
		font-size: 30px;
		padding:5px;
	}
</style>
<section class="main-content">
	<div class="container-xl">

		<div class="row gy-4">

			<div class="col-lg-12">

				<div class="row gy-4">
					<div class="col-sm-6">
						<!-- post -->
                        @foreach (var item in Model.Items) {
						<div class="">							
							<a asp-action="UserPost" asp-controller="Post" asp-route-userId="@item.UserId" class="user-name">
									<img class="avatar-image" src="@Html.DisplayFor(modelItem => item.Image)" alt="post-title" />@Html.DisplayFor(modelItem => item.UserName)
							</a>														
						</div>
                        }
					</div>


				</div>


			</div>
			

		</div>

	</div>
</section>
