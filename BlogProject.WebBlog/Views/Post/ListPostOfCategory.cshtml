@model List<BlogProject.ViewModel.Catalog.Posts.PostVm>
@using BlogProject.ViewModel.Catalog.Categories

@{
    ViewData["Title"] = "ListPostOfCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .avatar-image {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>



<!-- section main content -->
<section class="main-content">
    <div class="container-xl">

        <div class="row gy-4">

            <div class="col-lg-8">

                <div class="row gy-4">
                    @foreach (var item in Model)
                    {
                        
                    <div class="col-sm-6">
                        <!-- post -->
                        <div class="post post-grid rounded bordered">
                            <div class="thumb top-rounded">
                                    <a asp-action="ListPostOfCategory" asp-controller="Post" asp-route-categoryId="@item.CategoryId" class="category-badge position-absolute">@Html.DisplayFor(modelItem => item.CategoryName)</a>
                                <span class="post-format">
                                    <i class="icon-picture"></i>
                                </span>
                                    <a asp-action="Detail" asp-controller="Post" asp-route-ID="@item.PostID">
                                    <div class="inner">
                                            <img style="width:356px ; height:237px" src="@Html.DisplayFor(modelItem => item.Image)" alt="post-title" />
                                    </div>
                                </a>
                            </div>
                            <div class="details">
                                <ul class="meta list-inline mb-0">
                                        <li class="list-inline-item"><a asp-action="UserPost" asp-controller="Post" asp-route-userId="@item.UserId"><img class="avatar-image" src="@Html.DisplayFor(modelItem => item.Avatar)" class="author" alt="author" />@Html.DisplayFor(modelItem => item.UserName)</a></li>
                                        <li class="list-inline-item">@Html.DisplayFor(modelItem => item.UploadDate)</li>
                                </ul>
                                    <h5 class="post-title mb-3 mt-3"><a asp-action="ListPostOfCategory" asp-controller="Post" asp-route-categoryId="@item.CategoryId">@Html.DisplayFor(modelItem => item.Title)</a></h5>
                                    <p class="excerpt mb-0">@Html.DisplayFor(modelItem => item.Desprition)</p>
                            </div>
                            <div class="post-bottom clearfix d-flex align-items-center">
                                <div class="social-share me-auto">
                                    <button class="toggle-button icon-share"></button>
                                    <ul class="icons list-unstyled list-inline mb-0">
                                        <li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                        <li class="list-inline-item"><a href="#"><i class="fab fa-pinterest"></i></a></li>
                                        <li class="list-inline-item"><a href="#"><i class="fab fa-telegram-plane"></i></a></li>
                                        <li class="list-inline-item"><a href="#"><i class="far fa-envelope"></i></a></li>
                                    </ul>
                                </div>
                                <div class="more-button float-end">
                                    <a href="blog-single.html"><span class="icon-options"></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                   

                </div>

   

            </div>
            <div class="col-lg-4">

                <!-- sidebar -->
                <div class="sidebar">
                    
                    <!-- widget popular posts -->
